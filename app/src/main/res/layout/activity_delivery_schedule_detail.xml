<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.chenghsi.lise.gas.delivery.DeliveryScheduleDetailActivity"
              android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:id="@+id/year"
            android:layout_weight="0.2"
            android:textSize="25dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:id="@+id/textView6"
            android:layout_weight="0.1"
            android:textSize="25dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:id="@+id/textView7"
            android:layout_weight="0.1"
            android:textSize="25dp"/>
    </LinearLayout>

    <TextView
        android:text="客戶名稱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clientName"
        android:textSize="25dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        />

    <TextView
        android:text="地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:id="@+id/editText2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:drawable/edit_text"
            android:gravity="fill_horizontal"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/collapse"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/editText2"
            android:layout_toEndOf="@+id/editText2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/expand"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_below="@+id/imageButton"
            android:layout_toRightOf="@+id/editText2"
            android:layout_toEndOf="@+id/editText2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50KG"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20KG"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:id="@+id/editText3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:drawable/edit_text"
            android:gravity="fill_horizontal"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/collapse"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/editText3"
            android:layout_toEndOf="@+id/editText3"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/expand"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_alignTop="@+id/textView10"
            android:layout_toRightOf="@+id/editText3"
            android:layout_toEndOf="@+id/editText3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16KG"
            android:id="@+id/textView11"
            android:layout_below="@+id/imageButton2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:id="@+id/editText4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:drawable/edit_text"
            android:gravity="fill_horizontal"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toLeftOf="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:src="@drawable/collapse"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_below="@+id/imageButton2"
            android:layout_toRightOf="@+id/editText4"
            android:layout_toEndOf="@+id/editText4"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:src="@drawable/expand"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_below="@+id/imageButton4"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_toStartOf="@+id/textView10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4KG"
            android:id="@+id/textView12"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:id="@+id/editText5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:drawable/edit_text"
            android:gravity="fill_horizontal"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:src="@drawable/collapse"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_above="@+id/imageButton5"
            android:layout_toRightOf="@+id/editText5"
            android:layout_toEndOf="@+id/editText5"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/expand"
            android:layout_weight="1"
            android:onClick="btn_gasAdjust"
            android:layout_below="@+id/imageButton6"
            android:layout_toRightOf="@+id/editText5"
            android:layout_toEndOf="@+id/editText5"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView12"
            android:layout_toStartOf="@+id/textView12"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備註："
            android:id="@+id/textView13"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

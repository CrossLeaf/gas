<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/general_twoline_title_text"
                         android:id="@+id/tv2_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/text3"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:textSize="30dp"
                    android:onClick="btn_history" />
            </LinearLayout>

            <include layout="@layout/general_division_line"/>


            <include layout="@layout/general_twoline_title_text"
                     android:id="@+id/tv2_address"/>

            <include layout="@layout/general_division_line"/>

            <include layout="@layout/general_title_spinner"
                     android:id="@+id/tv_spr_phones"/>

            <include layout="@layout/general_division_line"/>

            <include layout="@layout/general_category_task"
                     android:id="@+id/indexed_task"/>

            <include layout="@layout/general_division_line"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沖帳"
                android:id="@+id/btn_strikeBalance"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spi_payMethod"/>

            <include layout="@layout/general_twoline_title_input"
                     android:id="@+id/tvi_remnant"/>

            <include layout="@layout/general_twoline_title_input"
                     android:id="@+id/tvi_allowance"/>

            <include layout="@layout/general_twoline_title_input"
                     android:id="@+id/tvi_receive"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tv_pay"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/btn_credit"
                    android:gravity="right"
                    android:paddingStart="100dp"/>
            </LinearLayout>

            <include layout="@layout/general_division_line"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="@string/payBill"
                android:textSize="50dp"
                android:id="@+id/finish"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0104-10-10"
            android:id="@+id/tv_order_day"
            android:layout_weight="1"
            android:textSize="19dp"
            android:paddingRight="5dp"
            android:lines="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任務種類"
            android:id="@+id/tv_order_task"
            android:layout_weight="1"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50KG"
            android:id="@+id/textView16"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50kg"
            android:id="@+id/tv_50"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20KG"
            android:id="@+id/textView18"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20kg"
            android:id="@+id/tv_20"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16KG"
            android:id="@+id/textView19"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16kg"
            android:id="@+id/tv_16"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4KG"
            android:id="@+id/textView20"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4kg"
            android:id="@+id/tv_4"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抄錶度數"
            android:id="@+id/tv_do_de"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="度數"
            android:id="@+id/tv_doddle_this_phase_degree"
            android:layout_weight="1"
            android:textSize="24dp"
            android:lines="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>